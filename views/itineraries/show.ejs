<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="bg-primary text-white p-3">
        <h2><%= itinerary.name %></h2>
      </div>
      <div class="mt-3">
        <p>
          <% if (itinerary.startDate && itinerary.endDate) { %>
            <%= new Date(itinerary.startDate).toLocaleDateString() %> - <%= new Date(itinerary.endDate).toLocaleDateString() %>
          <% } %>
        </p>
      </div>
    </div>
  </div>
  <% if (destinationAdded) { %>
    <div class="row">
      <div class="col-12">
        <h3>Flights</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3>Accommodations</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3>Places</h3>
      </div>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-12">
        <p>No Destinations Yet</p>
        <a href="/itinerary/<%= itinerary._id %>/destinations" class="btn btn-primary">Add Destination</a>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
